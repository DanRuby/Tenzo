<Window x:Class="TenzoActualGUI.View.SlideShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:markers="clr-namespace:tEngine.Markers;assembly=tEngine"
        
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:TenzoActualGUI.View"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type view:SlideShowVM}}"
        
        Closing="Window_OnClosing"
        Title="" Height="300" Width="300">
    <DockPanel>
        <markers:UIMarkers x:Name="MarkersArea" DockPanel.Dock="Left" Width="100" HorizontalAlignment="Left"/>
        <Border BorderThickness="1" BorderBrush="Blue" CornerRadius="5">
            <Image Source="{Binding Path=CurrentSlide.ImageBig}" />
        </Border>
    </DockPanel>
</Window>
