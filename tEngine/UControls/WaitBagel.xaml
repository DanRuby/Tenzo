<UserControl x:Class="tEngine.UControls.WaitBagel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uControls="clr-namespace:tEngine.UControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="root"
             Visibility="{Binding IsShow ,ElementName=root}">
    <Grid >
        <Border Background="LightSkyBlue"  Opacity="0.1" />
        <Border Height="30" Width="30">
            <uControls:GifImage x:Name="GifImage" Stretch="Fill"/>
        </Border>
    </Grid>
</UserControl>
